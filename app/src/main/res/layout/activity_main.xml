<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/KolmardenApp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kolmardenapp.MainActivity">

    <ImageView
        android:id="@+id/kolmardenMenu"
        android:background="@drawable/kolmarden"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/StrLocMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="145dp"
            android:text="@string/start_location_monitor" />

        <Button
            android:id="@+id/StrGeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_alignTop="@+id/button"
            android:layout_marginTop="54dp"
            android:text="@string/start_geofencing" />

        <Button
            android:id="@+id/StpGeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:layout_below="@+id/button2"
            android:text="@string/stop_geofencing" />
    </RelativeLayout>

</FrameLayout>
